{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "target": "es6",
    "module": "es6",
    "baseUrl": "./src/",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.promise"
    ]
  },
  "exclude": [
    "./node_modules",
    "./public",
    "./dist",
    "./.vscode",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}